{
  "name": "dots-and-boxes",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run tsc && node -r tsconfig-paths/register out/server/src/index",
    "tsc:watch": "tsc -p . -w",
    "tsc": "tsc -p .",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "4.17.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.3",
    "@types/socket.io": "^2.1.4",
    "jest": "^24.9.0",
    "jest-preset-angular": "^8.0.0",
    "ts-jest": "^24.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/../dots-and-boxes/src/shared/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
